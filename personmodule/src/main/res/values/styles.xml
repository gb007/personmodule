<resources>


    <!-- Base application theme. -->
    <style name="person_module_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/person_module_titleBg</item>
        <item name="colorPrimaryDark">@color/person_module_titleBg</item>
        <item name="colorAccent">@color/person_module_colorAccent</item>
        <!-- 设置activity切换动画 -->
        <!--<item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorBackgroundFloating">@color/person_module_white</item>
        <item name="toolbarNavigationButtonStyle">@style/person_module_myToolbarNavigationButtonStyle</item>
    </style>

    <style name="person_module_myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    

    <style name="person_module_AppTheme.Appbar">
        <item name="actionMenuTextColor">@drawable/person_module_menu_text_color</item>
        <item name="overlapAnchor">false</item>
        <item name="android:textColorPrimary">@color/person_module_white</item>
        <item name="colorControlNormal">@color/person_module_white</item>
    </style>

    <style name="person_module_AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>
    
    
    

    <!--公用水平分割线-->
    <style name="horizontal_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/person_module_color_606060</item>
    </style>

    <style name="style_button">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/person_module_color_fbfbfd</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- 状态栏 -->
    <declare-styleable name="PersonModuleStatusBarHeightView">
        <attr name="person_use_type" format="integer">
            <enum name="person_use_height" value="0" />
            <enum name="person_use_padding_top" value="1" />
        </attr>
    </declare-styleable>


</resources>
